<!DOCTYPE html>
<html lang="ko" xmlns:th="http://www.thymeleaf.org"
	xmlns:sec="http://www.thymeleaf.org/thymeleaf-extras-springsecurity5">

<head>
	<th:block th:replace="fragments/meta :: metaFragment(title='건물 등록', useMetaCsrf='true')"></th:block>

	<!-- select -->
	<link rel="stylesheet" type="text/css"
		th:href="@{/resources/cork/plugins/bootstrap-select/bootstrap-select.min.css}">
	<!-- search -->
	<link th:href="@{/resources/cork/assets/css/elements/search.css}" rel="stylesheet" type="text/css" />

	<!--  css style  -->
	<th:block th:replace="fragments/style :: styleFragment"></th:block>
</head>


<body class="sidebar-noneoverflow">

	<!--  header  -->
	<th:block th:replace="fragments/header :: headerFragment"></th:block>


	<!--  BEGIN MAIN CONTAINER  -->
	<div class="main-container" id="container">

		<div class="overlay"></div>
		<div class="search-overlay"></div>

		<!--  sidebar  -->
		<th:block th:replace="fragments/sidebar :: sidebarFragment(main='mgt', sub='mgt-build')"></th:block>

		<!--  BEGIN CONTENT AREA  -->
		<div id="content" class="main-content">
			<div class="layout-px-spacing">


				<!-- CONTENT AREA -->
				<div class="row layout-top-spacing">

					<div id="tableHover" class="col-lg-12 col-12 layout-spacing">
						<div class="statbox widget box box-shadow">
							<div class="widget-header">
								<div class="row">
									<div class="col-xl-12 col-md-12 col-sm-12 col-12">
										<h4>건물 등록</h4>
									</div>
								</div>
							</div>

							<div class="widget-content widget-content-area">

								<!-- select -->
								<div>
									<div class="col-sm-12">
										<form id="buildWriteProcForm" name="buildWriteProcForm"
											th:action="@{/admin/mgt/build/writeProc}" method="post">
											<div class="form-group row mb-2">
												<label for="build_name"
													class="col-2 col-form-label col-form-label-sm">지역 설정</label>
												<div class="col-10">
													<select class="select-box mr-2" data-live-search="true" title="시,도"
														data-width="fit" id="sidoSelect" name="sido_seq">
														<th:block th:if="${sidoList.size()!=0}">
															<th:block th:each="list : ${sidoList}">
																<option th:value="${list.sido_seq}"
																	th:text="${list.sido_name}">
																</option>
															</th:block>
														</th:block>
													</select>


													<select class="select-box mr-2" data-live-search="true"
														data-width="fit" title="군,구" id="sigunguSelect"
														name="sigungu_seq">

													</select>

													<select class="select-box" data-live-search="true" data-width="fit"
														title="지역" id="dongSelect" name="dong_seq">

													</select>
												</div>
											</div>
											<div class="form-group row mb-2">
												<label for="build_name"
													class="col-2 col-form-label col-form-label-sm">건물 이름</label>
												<div class="col-3">
													<input type="text" id="build_name" name="build_name"
														placeholder="건물 이름" class="form-control">
												</div>
											</div>
											
											<div class="form-group row mb-2">
												<label for="build_name"
													class="col-2 col-form-label col-form-label-sm">건물 좌표</label>
												<div class="col-3 input-group">
													<input type="text" id="build_x" name="build_x" placeholder="경도"
														class="form-control">
													<input type="text" id="build_y" name="build_y" placeholder="위도"
														class="form-control">
												</div>
										</form>
									</div>
								</div>


								<!-- 버튼 -->
								<div class="d-flex justify-content-end">
									<div>
										<input type="button" class="btn btn-sm btn-primary" value="코드관리"
											id="codeMgtBtn">
										<input type="button" class="btn btn-sm btn-info" value="저장" id="saveBtn">
										<input type="button" class="btn btn-sm btn-secondary" value="목록" id="listBtn">
									</div>
								</div>
							</div>
						</div>
					</div>


				</div>


				<!-- CONTENT AREA -->

			</div>


			


		</div>
		<!--  END CONTENT AREA  -->
			
			<!--  footer   -->
			<th:block th:replace="fragments/footer"></th:block>

	</div>
	<!-- END MAIN CONTAINER -->


	<th:block th:replace="fragments/script :: scriptFragment(useScriptCsrf='true')"></th:block>
	<script th:src="@{/resources/cork/plugins/bootstrap-select/bootstrap-select.min.js}"></script>
	<script th:src="@{/resources/honeyArcade/admin/common/js/areaSelect.js}"></script>
	<script th:src="@{/resources/honeyArcade/admin/mgt/build/js/adminMgtBuildWrite.js}"></script>

	<script th:inline="javascript">
		/* <![CDATA[ */

		/*]] */
	</script>
</body>

</html>