<!DOCTYPE html>
<html lang="ko" xmlns:th="http://www.thymeleaf.org" xmlns:sec="http://www.thymeleaf.org/thymeleaf-extras-springsecurity5" >
<head>
	<th:block th:replace="fragments/meta :: metaFragment(title='유료 서비스', useMetaCsrf='true')"></th:block>
	<!--  css style  -->
	<th:block th:replace="fragments/style :: styleFragment"></th:block>
	<link rel="stylesheet" type="text/css" th:href="@{/resources/cork/plugins/table/datatable/datatables.css}">
	<link rel="stylesheet" type="text/css" th:href="@{/resources/cork/assets/css/elements/custom-pagination.css}">
	<link rel="stylesheet" type="text/css" th:href="@{/resources/cork/plugins/bootstrap-select/bootstrap-select.min.css}">
</head>


<body class="sidebar-noneoverflow">
    
	<!--  header  -->
	<th:block th:replace="fragments/header :: headerFragment"></th:block>
	

    <!--  BEGIN MAIN CONTAINER  -->
    <div class="main-container" id="container">

        <div class="overlay"></div>
        <div class="search-overlay"></div>

		<!--  sidebar  -->
		<th:block th:replace="fragments/sidebar :: sidebarFragment(main='member', sub='member-event')"></th:block>
		
        <!--  BEGIN CONTENT AREA  -->
        <div id="content" class="main-content">
            <div class="layout-px-spacing">


                <!-- CONTENT AREA -->
                <div class="row layout-top-spacing">
                    
					<div id="tableHover" class="col-lg-12 col-12 layout-spacing">
						<div class="statbox widget box box-shadow">
							<div class="widget-header">
								<div class="row">
									<div class="col-xl-12 col-md-12 col-sm-12 col-12">
										<h4>유료 서비스(프로모션)</h4>
									</div>
								</div>
							</div>
							<div class="widget-content widget-content-area">
								<ul class="nav nav-tabs  mb-3 mt-3 justify-content-end" id="simpletab" role="tablist">
								    <li class="nav-item">
								        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">이용관리</a>
								    </li>
								    <li class="nav-item">
								        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">서비스 추가</a>
								    </li>
								</ul>
								<div class="tab-content border-tab" id="simpletabContent">
								    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
								    	<form id="searchForm" method="GET" th:action="@{/admin/member/event/list}">
								        <div class="row justify-content-end mt-2 mr-2">
								        
											<input type="search" id="search_text" name="search_text" placeholder="상품명을 입력하세요" class="d-inline-block form-control mr-1 col-3" th:value="${search_text}">
											<input type="button" id="searchBtn" class="btn btn-primary" value="검색">
											<input type="hidden" name="type" value="search">
								        
										</div>
										</form>
				          				<div class="table-responsive mb-4 mt-4 text-center">
			                                <table id="zero-config" class="table table-hover" style="width:100%">
			                                    <thead>
			                                        <tr>
			                                            <th>상품명</th>
			                                            <th>가격</th>
			                                            <th>노출 순위</th>
			                                            <th>건물 광고</th>
			                                            <th>지역 광고</th>
			                                            <th>쿠폰</th>
			                                            <th>생성일</th>
			                                            <th></th>
			                                        </tr>
			                                    </thead>
			                                    <tbody>
				                                	<th:block th:if="${eventList.size() == 0}">
				                                		<tr>
				                                			<td colspan="8">
				                                				조회된 데이터가 없습니다
				                                			</td>
				                                		</tr>
				                                	</th:block>
													
													<th:block th:if="${eventList.size() != 0}">
														<th:block th:each="list : ${eventList}">
					                                		<tr>
					                                            <td th:text="${list.event_title}"></td>
					                                            <td th:text="${#numbers.formatInteger(list.event_price, 0, 'COMMA')}"></td>
					                                            <td th:text="${list.event_sort}"></td>
					                                            <td>
					                                            	<th:block th:if="${list.build_day != null}">
					                                            		[[${list.build_day}]]일
					                                            	</th:block>
					                                            </td>
					                                            <td>
					                                            	<th:block th:if="${list.area_day != null}">
					                                            		[[${list.area_day}]]일
					                                            	</th:block>					                                            	
					                                            </td>
					                                            <td>
					                                            	<th:block th:if="${list.coupon_day != null}">
					                                            		[[${list.coupon_day}]]일
					                                            	</th:block>						                                            
					                                            </td>
					                                            <td th:text="${list.add_date}"></td>
					                                            <td>
					                                            	<input type="button" class="btn btn-primary modBtn" value="수정" th:data-seq="${list.event_seq}">
					                                            </td>
					                                		</tr>
														</th:block>
				                                	</th:block>	  
			                                    </tbody>
			                                </table>
				          				</div>
				          				<div class="row justify-content-center dataTables_paginate paging_simple_numbers" id="zero-config_paginate">
				          					<th:block th:if="${eventList.size() == 0}">
					          					<div class="paginating-container pagination-solid">
					          						 <ul class="pagination">
														<li  class="prev"><a href="javascript:void(0);"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg></a></li>
														<li  class="active"><a href="javascript:void(0);">1</a></li>
														<li class="next"><a href="javascript:void(0);"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-right"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg></a></li>		          						 
					          						 </ul>
					          					</div>
				          					</th:block>				          				
					          				
				          					<th:block th:if="${eventList.size() != 0}">
						          				<div class="paginating-container pagination-solid">
												    <ul class="pagination">
												    	<th:block th:if="${pageUtil.startPage == 1}">
												        	<li  class="prev"><a href="javascript:void(0);"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg></a></li>
												    	</th:block>
												    	
												    	<th:block th:if="${pageUtil.startPage != 1}">
												    		<li  class="prev">
												    			<a th:href="@{/admin/member/event/list(nowPage=${pageUtil.startPage-1}, listCount=${listCount}, type=${type}, search_text=${search_text} )}">
												    				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline>
												    				</svg>
												    			</a>
												    		</li>
												    	</th:block>
												    	
												    	<li class="paginate_button page-item" th:each="page : ${#numbers.sequence(pageUtil.startPage, pageUtil.endPage)}" th:classappend="${page == nowPage}? 'active'">
												        	<a th:text="${page}" th:href="@{/admin/member/event/list(nowPage=${page}, listCount=${listCount}, type=${type}, search_text=${search_text} )}" >1</a>
												    	</li>
												        
												        <th:block th:if="${pageUtil.endPage == pageUtil.totalPage}">
												        	<li class="next"><a href="javascript:void(0);"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-right"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg></a></li>
												        </th:block>
												        
												        <th:block th:if="${pageUtil.endPage != pageUtil.totalPage}">
												        	<li class="next">
												        		<a th:href="@{/admin/member/event/list(nowPage=${pageUtil.endPage+1},  listCount=${listCount}, type=${type}, search_text=${search_text}  )}">
												        			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-right"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline>
												        			</svg>
												        		</a>
												        	</li>
												        </th:block>
												    </ul>
												</div>
				          					</th:block>					          				
					          				
				          				</div>
								    </div>
								    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
								        <div>
								        	<div>
												<span class="col-2" style="margin-right: 1.6rem;">유료 상품명</span>
												<input type="text" id="eventTitle" class="form-control d-inline col-8" style="vertical-align: middle;" placeholder="주관식 입력(예:패키지A, 패키지B, 쿠폰 광고 1주, 지역광고(배너)3일 등)">
								            </div>
								            <div class="mt-2">
												<span class="mr-2 col-2">상품 상세 설명</span>
												<textarea type="text" id="eventText" class="form-control d-inline col-8" style="vertical-align: middle;" rows="5" placeholder="서술형 입력"></textarea>
								            </div>
								            <div class="mt-2 row" style="margin-left: 125px;">
								            	<div>
													<span class="col-2">가격 입력</span>
													<input type="number" id="eventPrice" class="form-control d-inline col-6" style="vertical-align: middle;" placeholder="000" min="0">
								            	</div>
								            	<div>
								            		<span class="col-2">노출 순위</span>
												<input type="number" id="eventSort" min="0" class="form-control d-inline col-6" style="vertical-align: middle;" placeholder="1,2,3">
								            	</div>
								            </div>
								            <div class="row mt-2 ml-3">
								            	<div style="width: 110px;">
													<span>상품 유형 선택</span>
								            	</div>
												<div class="table-responsive col-8">
													    <table class="table table-bordered mb-4 text-center">
													        <tbody>
													            <tr>
													                <td class="font-weight-bold">항목</td>
													                <td class="font-weight-bold">건물 광고(배너)</td>
													                <td class="font-weight-bold">지역 광고(배너)</td>
													                <td class="font-weight-bold">쿠폰</td>
													            </tr>
													            <tr>
													                <td class="font-weight-bold">유형선택</td>
													                 <td class="checkbox-column">
													                    <div class="custom-control custom-checkbox checkbox-primary">
													                      <input type="checkbox" class="custom-control-input todochkbox" id="buildCheck">
													                      <label class="custom-control-label" for="buildCheck"></label>
													                    </div>
													                </td>
													                <td class="checkbox-column">
													                    <div class="custom-control custom-checkbox checkbox-primary">
													                      <input type="checkbox" class="custom-control-input todochkbox" id="areaCheck">
													                      <label class="custom-control-label" for="areaCheck"></label>
													                    </div>
													                </td>
													                <td class="checkbox-column">
													                    <div class="custom-control custom-checkbox checkbox-primary">
													                      <input type="checkbox" class="custom-control-input todochkbox" id="couponCheck">
													                      <label class="custom-control-label" for="couponCheck"></label>
													                    </div>
													                </td>
													            </tr>
													            <tr>
													                <td class="font-weight-bold">날짜 입력</td>
													                <td>
													                	<input type="number" id="buildDay" class="form-control d-inline col-6" min="0"> 일
																	</td>
													                <td>
													                	<input type="number" id="areaDay" class="form-control d-inline col-6" min="0"> 일
																	</td>
													                <td>
													                	<input type="number" id="couponDay" class="form-control d-inline col-6" min="0"> 일
																	</td>
													            </tr>
													        </tbody>
													    </table>
												</div>
											</div>
											<div class="d-flex justify-content-end col-9">
												<input type="button" id="saveBtn" class="btn btn-primary mr-2" value="저장">
												<input type="button" id="modBtn" class="btn btn-primary mr-2" value="수정" style="display: none;">
												<input type="button" id="delBtn" class="btn btn-primary mr-2" value="삭제" style="display: none;">
												<input type="button" id="cancelBtn" class="btn btn-danger" value="취소">
											</div>
								        </div>
								    </div>
								</div>
								
							</div>
						</div>
					</div>
                    

                </div>


                <!-- CONTENT AREA -->

            </div>
            <input type="text" id="pageMode" value="">
			<input type="text" id="event_seq" name="event_seq" value="">

            
            <!--  footer   -->
            <th:block th:replace="fragments/footer"></th:block>
			
            
        </div>
        <!--  END CONTENT AREA  -->

    </div>
    <!-- END MAIN CONTAINER -->
	


	<th:block th:replace="fragments/script :: scriptFragment(useScriptCsrf='true')"></th:block>
	<script th:src="@{/resources/honeyArcade/admin/member/event/js/adminMemberEventList.js}"></script>
	<script th:src="@{/resources/cork/plugins/bootstrap-select/bootstrap-select.min.js}"></script>
	<script th:src="@{/resources/cork/plugins/table/datatable/datatables.js}"></script>
	<script th:inline="javascript">
	/* <![CDATA[ */
		
	/*]] */
	</script>
</body>

</html>