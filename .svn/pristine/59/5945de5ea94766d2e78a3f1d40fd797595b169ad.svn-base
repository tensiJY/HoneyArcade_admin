		select
			  tb_dong_banner.dong_seq
			, tb_dong_banner.banner_seq
			, tb_dong.dong_name
		from
			tb_dong_banner
		inner join tb_dong
			on tb_dong.dong_seq = tb_dong_banner.dong_seq
		where
			tb_dong_banner.banner_seq = #{banner_seq}
	]]>
	</select>
	
	<delete id="deleteDongBanner" parameterType="honeyarcade.admin.ad.area.AdminAdAreaVO">
	<![CDATA[
		delete from 
			tb_dong_banner
		where
				banner_seq	= #{banner_seq}
			and banner_type	= #{banner_type}
			and owner_id	= #{owner_id}
	]]>
	</delete>
	
	<update id="updateBanner" parameterType="honeyarcade.admin.ad.area.AdminAdAreaVO">
	<![CDATA[
		update
			tb_banner
		set
			  banner_img 		= #{banner_img}
			, banner_main_img 	= #{banner_main_img}
			, banner_start_day	= #{banner_start_day}
			, banner_end_day	= #{banner_end_day}
			, banner_sort		= #{banner_sort}	
			, mod_dt			= getDate()
			, mod_id			= #{admin_id}	
		where
				banner_seq		= #{banner_seq}
			and banner_type		= #{banner_type}
			and owner_id		= #{owner_id}				
	]]>
	</update>
	
</mapper>